<Window x:Class="Ester.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True" ResizeMode="NoResize" SizeToContent="WidthAndHeight" ShowInTaskbar="False">
    <Grid Height="300" Width="600" Background="#FF0090b2">
        <TextBlock Name="SplashTitle" Foreground="#FFFFFF" FontSize="72" 
                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,60"
                   Text="Ester"/>
        <TextBlock Name="SplashStatus" Foreground="#FFFFFF" FontSize="14" 
                   HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="50,20"
                   Text="Загрузка..."/>
    </Grid>
</Window>

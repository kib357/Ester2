<BaseClasses:SensorBase x:Class="Ester.Model.PlanControls.InnerPlan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:BaseClasses="clr-namespace:Ester.Model.BaseClasses"
             xmlns:PlanControls="clr-namespace:Ester.Model.PlanControls">
    <UserControl.ContentTemplate>
        <DataTemplate>
            <Grid MouseDown="InnerPlanMouseDown" MouseUp="InnerPlanMouseUp" >
                <ContentPresenter Name="InnerPlanShape" Content="{TemplateBinding Content}" />  
                <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType={x:Type PlanControls:InnerPlan}}}" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </DataTemplate>
    </UserControl.ContentTemplate>
</BaseClasses:SensorBase>

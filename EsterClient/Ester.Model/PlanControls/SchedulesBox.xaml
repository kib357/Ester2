<BaseClasses:SensorBase x:Class="Ester.Model.PlanControls.SchedulesBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:BaseClasses="clr-namespace:Ester.Model.BaseClasses"
                        xmlns:PlanControls="clr-namespace:Ester.Model.PlanControls">    
        <ComboBox ItemsSource="{Binding Path=Schedules, RelativeSource={RelativeSource AncestorType={x:Type PlanControls:SchedulesBox}}}" 
                  DisplayMemberPath="Name" SelectedItem="{Binding CurrentSchedule, RelativeSource={RelativeSource AncestorType={x:Type PlanControls:SchedulesBox}}}"  
                  SelectionChanged="SelectionChanged" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        </ComboBox>
</BaseClasses:SensorBase>

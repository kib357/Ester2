<BaseClasses:SensorBase x:Class="Ester.Model.PlanControls.RunStop"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:BaseClasses="clr-namespace:Ester.Model.BaseClasses"
                        xmlns:PlanControls="clr-namespace:Ester.Model.PlanControls" mc:Ignorable="d" >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Ester.Model;component/Styles/Button.xaml"/>
                <ResourceDictionary Source="/Ester.Model;component/Styles/ToggleButton.xaml"/>
                <ResourceDictionary Source="/Ester.Model;component/Styles/PushButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
		<CheckBox Name="RunStopButton" IsThreeState="False" Style="{StaticResource FlipSwitchButton}" Width="{Binding Path=Width, RelativeSource={RelativeSource AncestorType={x:Type PlanControls:RunStop}}}"
                      IsChecked="{Binding Path=IsRunning, RelativeSource={RelativeSource AncestorType={x:Type PlanControls:RunStop}}}" />
</BaseClasses:SensorBase>

<UserControl x:Class="Ester.Model.UserControls.Loader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:UserControls="clr-namespace:Ester.Model.UserControls"
             IsVisibleChanged="UserControlIsVisibleChanged">
    <Grid Width="400">
        <Canvas>
            <Ellipse Name="Ellipse1" Fill="{Binding FillColor, RelativeSource={RelativeSource AncestorType={x:Type UserControls:Loader}}}" Width="10" Height="10" Canvas.Left="130"/>
            <Ellipse Name="Ellipse2" Fill="{Binding FillColor, RelativeSource={RelativeSource AncestorType={x:Type UserControls:Loader}}}" Width="10" Height="10" Canvas.Left="160"/>
            <Ellipse Name="Ellipse3" Fill="{Binding FillColor, RelativeSource={RelativeSource AncestorType={x:Type UserControls:Loader}}}" Width="10" Height="10" Canvas.Left="190"/>
            <Ellipse Name="Ellipse4" Fill="{Binding FillColor, RelativeSource={RelativeSource AncestorType={x:Type UserControls:Loader}}}" Width="10" Height="10" Canvas.Left="220"/>
            <Ellipse Name="Ellipse5" Fill="{Binding FillColor, RelativeSource={RelativeSource AncestorType={x:Type UserControls:Loader}}}" Width="10" Height="10" Canvas.Left="250"/>
        </Canvas>    
    </Grid>
</UserControl>
